[alias]
    branch-info = "!sh -c ' \
git branch --list --no-color | sed -e \"s/*/ /\" | \
while read branch; do \
    fmt=\"%Cred$branch:%Cblue %s %Cgreen%h%Creset (%ar)\"; \
    git --no-pager log -1 --format=format:\"$fmt\" $branch -- ; echo;\
done'"
    bi = "!git branch-info"

    mylog = "log --author aharter \
        --pretty=format:'- %s' master --reverse"

[core]
    excludesfile = ~/bin/config/gitignore

[sendemail]
    chainreplyto = false
    confirm = auto
    from = "Anya Harter <aharter@redhat.com>"
    smtpserver = smtp.corp.redhat.com
[user]
    name = Anya Harter
    email = aharter@redhat.com

[format]
    numbered = auto
    thread = shallow
    signoff = true

